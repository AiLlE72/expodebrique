{{#unless RT }}
<div aria-live="polite" aria-atomic="true" style="position: relative">
    <div class="toast" data-delay="5000" id="toastdecookie"
        style="z-index:99; position: absolute; top: 10px; right: 10px;">
        <div class="toast-header">
            <strong class="mr-auto ">Bienvenue</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">&times;</button>
        </div>
        <div class="toast-body">
            Ce site n'utilise aucun cookie publicitaire ou tracker.
            Seulement un cookie de fonctionnement
        </div>
        <div class="row justify-content-center">
            <form action="/cookie" method="post">
                <button type="submit" class="btn btn-outline-color4 mb-2">Accepter</button>
            </form>
        </div>
    </div>
</div>

<script>
    $('#toastdecookie').on('hidden.bs.toast', function (res) {
        document.cookie = "rememberToast=RT;"
    })
   
</script>
{{/unless}}