<div class="container my-3">
    <div class="row justify-content-center">
        <h1>Proposer votre exposition</h1>
    </div>
</div>



<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card-body">
                <form action="/createUser" method="POST">
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="full-name" placeholder="Nom de l'exposition">
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="username" placeholder="Adresse de la salle">
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 mb-3 ">
                                    <input type="text" class="form-control" name="city" placeholder="Ville">
                                </div>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" class="form-control" name="departement"
                                        placeholder="DÃ©partement">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 mb-3">
                                    <input type="text" class="form-control" name="postCode" placeholder="Code Postal">
                                </div>
                                <div class="col-md-6 col-sm-6 ">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <label class="input-group-text" for="inputGroupSelect01">Pays</label>
                                        </div>
                                        <select class="custom-select" id="inputGroupSelect01" name="departement">
                                            <option selected>Choisir...</option>
                                            <option value="1">France</option>
                                            <option value="2">Belgique</option>
                                            <option value="3">Espagne</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 mb-3">
                                    <div class="input-group mb-3">
                                        <input type="date" name="start" max="3000-12-31" min="1000-01-01" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 ">
                                    <div class="input-group">
                                        <input type="date" name="start" max="3000-12-31" min="1000-01-01" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center ">
                        <div class="col-md-6 offset-md-4 ">
                            <button type="submit" class="btn btn-outline-color3">
                                S'enregistrer
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>